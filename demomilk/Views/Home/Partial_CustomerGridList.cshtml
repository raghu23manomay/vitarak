@using PagedList;
@using PagedList.Mvc;
@using GridMvc.Html

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="container-fluid animatedParent animateOnce">
    <div class="tab-content my-3" id="v-pills-tabContent">
        <div class="tab-pane animated fadeInUpShort show active go" id="v-pills-all" role="tabpanel" aria-labelledby="v-pills-all-tab">
            <div class="row my-3">
                <div class="col-md-12">
                    <div class="card r-0 shadow">
                        <div class="table-responsive">
                            <form>
                                <table class="table table-striped table-hover r-0">
                                    <thead>
                                        <tr class="no-b">
                                            <th></th>
                                            <th><b>CustomerName</b></th>
                                            <th><b>Address</b></th>
                                            <th><b>Mobile</b></th>
                                            <th><b>DeliveryCharges</b></th>
                                            <th><b>VechicleNo</b></th>
                                            <th><b>Area</b></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            @Html.HiddenFor(model => item.CustomerID, new { @id = "CustomerID" })
                                            <td></td>
                                            <td><strong>@item.CustomerName</strong></td>
                                            <td><strong>@item.Address</strong></td>
                                            <td><strong>@item.Mobile</strong></td>
                                            <td><strong>@item.DeliveryCharges</strong></td>
                                            <td><strong>@item.VechicleNo</strong></td>
                                            <td><strong>@item.Area</strong></td>
                                            <td><a href="@Url.Action("EditCustomer", "Home", new { @CustomerID = @item.CustomerID })" data-toggle="modal" data-target="#mdlEditEmployee">Edit</a></td>
                                            @*<td id="del" onclick="deleteItem()"><a href="@Url.Action("DeleteCustomer", "Home", new { @CustomerID = @item.CustomerID })" data-toggle="modal" data-target="#mdlEditEmployee">Delete</a></td>*@
                                            <td id="del" onclick="deleteItem()">Delete</td>
                                        </tr>

                                        }

                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>




            <nav class="my-3" aria-label="Page navigation">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("IndexForCustomerMaster", "Home", new { page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions() { MaximumPageNumbersToDisplay = 4, DisplayPageCountAndCurrentLocation = true }, new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "mgrid", OnComplete = "PagedOnComplete" }))
                @if (Model.Count() == 0)
                {
                    <ul class="pagination"></ul>
                }
            </nav>
